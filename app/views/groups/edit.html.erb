<% provide(:title, 'Edit Group') %>
<h1>Update Group</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@group) do |f| %>
    
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>